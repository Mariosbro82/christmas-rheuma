struct ExportView: View {
    @Environment(\.managedObjectContext) private var viewContext
    @State private var showingExportOptions = false
    @State private var showingHealthKitAuth = false
    @State private var healthStore = HKHealthStore()
    @State private var isHealthKitAuthorized = false
    @State private var exportStatus = ""
    @State private var showingShareSheet = false
    @State private var exportedFileURL: URL?
    @State private var basfiResponses: [QuestionnaireResponse] = []
    @State private var basgResponses: [QuestionnaireResponse] = []
    
    // Fetch requests for all data
    @FetchRequest(
        sortDescriptors: [NSSortDescriptor(keyPath: \PainEntry.timestamp, ascending: false)],
        animation: .default)
